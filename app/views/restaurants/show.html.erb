<%= link_to "Back to restaurants list", restaurants_path %>

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h3><%= @restaurant.name %> review :</h3>
<p><% @restaurant.reviews.each do |review| %></p>
<p><%= review.content %></p>
<p><%= review.rating %></p>
<% end %>


<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>



